package musician

import (
	"github.com/jfkgustav/direq/model"
	"strconv"
	"time"
)

templ RequestedSongCard(song model.SongRequest, sort bool) {
	<div id="song-card-top" class="flex justify-between">
		<div class="text-3xl text-bold">{ song.Song.Title }</div>
		<div>{ strconv.Itoa(song.Song.Year) } </div>
	</div>
	<div id="song-card-bottom" class="flex justify-between">
		<div>{ song.Song.Artist } </div>
		<div class="bg-indigo-500 px-2 pb-1 rounded-md">
			if sort {
				<p>{ strconv.Itoa(song.NumberOfVotes ) } ðŸ—³ </p>
			} else {
				<p>{ strconv.Itoa(int(time.Since(song.Created).Minutes())) } min ðŸ•’ </p>
			}
		</div>
	</div>
}
